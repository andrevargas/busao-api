<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.spatial.dialect.postgis.PostgisDialect</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.connection.pool_size">1</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/teste</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">postgres</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="br.univali.sisnet.domain.DevicePosition.DevicePosition"/>
    <mapping class="br.univali.sisnet.domain.BusCompany.BusCompany"/>
    <mapping class="br.univali.sisnet.domain.BusLine.BusLine"/>
  </session-factory>
</hibernate-configuration>
